<div class="container w-11/12 max-w-3xl ml-auto mr-auto">
  <h2 class="text-2xl font-semibold pb-4">Resend Unlock Email</h2>
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field mb-4">
      <%= f.email_field :email, autofocus: true, class: "rounded w-full", placeholder: "email" %>
    </div>
    <div class="actions mb-5">
      <%= f.submit "Resend", class: "block mx-auto w-1/3 rounded py-2 px-4 bg-gray-400 text-gray-300 hover:bg-green-500 hover:text-gray-100" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div class="container w-11/12 max-w-3xl ml-auto mr-auto">
