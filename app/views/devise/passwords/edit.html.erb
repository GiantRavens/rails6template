<div class="container w-11/12 max-w-3xl ml-auto mr-auto">
  <h2 class="text-2xl font-semibold pb-4">Change Password</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="field mb-4">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, class: "rounded w-full", placeholder: "new password" %>
    </div>
    <div class="field mb-4">
      <%= f.password_field :password_confirmation, class: "rounded w-full", placeholder: "confirm new password" %>
    </div>
    <div class="actions mb-5">
      <%= f.submit "Change Password", class: "block mx-auto w-1/3 rounded py-2 px-4 bg-gray-400 text-gray-300 hover:bg-green-500 hover:text-gray-100" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
